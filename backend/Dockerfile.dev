# Dockerfile para desenvolvimento do backend
FROM golang:1.25.3-alpine

WORKDIR /app

# Instalar ferramentas de desenvolvimento
RUN apk add --no-cache git

# Copiar arquivos de dependências
COPY go.mod go.sum ./
RUN go mod download

# Copiar código fonte (incluindo .air.toml)
COPY . .

# Expor porta
EXPOSE 7000

# Usar Air para hot reload com configuração do .air.toml
# Se o Air não funcionar, pode usar: CMD ["go", "run", "main.go"]
CMD ["air", "-c", ".air.toml"]
