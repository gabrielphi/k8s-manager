# Dockerfile para desenvolvimento do backend
FROM golang:1.25.3-alpine

WORKDIR /app

# Instalar ferramentas de desenvolvimento
RUN apk add --no-cache git

# Copiar arquivos de dependências
COPY go.mod go.sum ./
RUN go mod tidy
RUN go mod download

# Copiar código fonte
COPY . .

# Expor porta
EXPOSE 7000

# Executar aplicação em modo desenvolvimento
# O hot reload será gerenciado pelo volume montado no docker-compose
CMD ["go", "run", "main.go"]
