# Dockerfile para desenvolvimento do frontend
FROM node:20-alpine

WORKDIR /app

# Instalar dependências
COPY package.json package-lock.json* ./
RUN npm install

# Copiar código fonte
COPY . .

# Expor porta do Vite
EXPOSE 3000

# Comando para desenvolvimento com hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
